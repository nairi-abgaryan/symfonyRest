{% extends "front/layout/app.html.twig" %}
{% block content %}  
    <div class="container">
    	<div class="row">
    		<h3>Data</h3>
    		<div class="col-sm-4">
    		<form action="">
                <input type="hidden" name="_method" value="PUT"/>
    			<input type="hidden" name="id" value="{{data.id}}" id="id" />
                    <div class="form-group">
                        <label for="{{ data.fname }}">fname</label>
                        <input type="text" name="{{ data.fname }}" value="{{ data.fname }}" id="fname" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="{{ data.lname }}">lname</label>
                        <input type="text" name="{{ data.lname }}" value="{{ data.lname }}" id="lname" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="{{ data.email }}">email</label>
                        <input type="text" name="{{ data.email }}" value="{{ data.email }}" id="email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="hidden" id="alias" value="user" />
                        <input type="button" name="submit" id="updateRecord" value="submit" class="btn" />
                    </div>
    		</form>
    		</div>
    	</div>
    </div>
{% endblock %} 